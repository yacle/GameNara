<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="freeB">
	<select id="listAll" resultType="java.util.HashMap">
		select * from freeboard order by no desc
	</select>
	
	<insert id="addOne">
		insert into freeboard
		values(freeboard_seq.nextval,#{writer},#{title},#{coment},sysdate,0,0,null,null)
	</insert>
	
	<select id="readOne" parameterType="java.lang.String"
		resultType="java.util.HashMap">
		select * from freeboard where no=#{no}
	</select>
	
	<update id="addPoint">
		UPDATE MEMBER set POINT = 200 
	</update>
</mapper>