<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="freeD">
	<select id="listAll" resultType="java.util.HashMap">
			select b.*, t.c from free_distribute b left join 
        	(select bno, count(*) as c from reply group by bno ) t on b.no = t.bno order by no desc
	</select>

	<insert id="addOne">
		insert into free_distribute
		values(free_distribute_seq.nextval,#{writer},#{title},#{coment},0,#{attach, jdbcType=VARCHAR},sysdate,#{end, jdbcType=NUMERIC})
	</insert>

	<select id="readOne" parameterType="java.lang.String"
		resultType="java.util.HashMap">
		select * from free_distribute where no=#{no}
	</select>

	<update id="countOne"> 
		update free_distribute set view_cnt = view_cnt+1 where no =#{no}
	</update>
	
	<update id="endSet">
		update free_distribute set end=#{end} where no=#{no}
	</update>
	<!--  
	 <select id="readReply" resultType="java.util.HashMap">
		select * from freeboard_reply where parent=#{parent} order by no desc
	</select> -->
	 
</mapper>